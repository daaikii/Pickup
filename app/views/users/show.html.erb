<div class="text-center">
    <h3>ユーザー詳細</h3>
</div>
<div class="container pb-4">
  <div class="row">
    <h3 class="justify-content-center col"><%= @user.name %></h3>
    <%if @user.image?%>
        <%= image_tag @user.image.url%>
    <%else%>
        <%= image_tag "/assets/default.jpg" %>
    <%end%>
    <%if current_user==@user%>
        <%= link_to 'アカウントを編集する', edit_user_path(@user) %>
        <%=link_to '退会する',@user,method: :delete%>
    <%end%>
  </div>
</div>
<div class="media">
    <div class="media-body">
        <h5>プロフィール</h5> 
        <%=@user.profile%>
    </div>
</div>
<div>
    <h5>アカウント投稿一覧</h5>
    <%@posts.each do|post|%>
        <%= link_to post_path(post.id) do %>
            <%= image_tag post.img.url %>
        <% end %>
    <%end%>
</div>
<%= paginate @posts %>