<div class="container ">
    <div class="row">
        <h3 class="justify-content-center col"><%= @post.user.name %></h3>
        <%= link_to user_path(@post.user.id) do %>
            <%if @post.user.image?%>
                <%= image_tag @post.user.image.url%>
            <%else%>
                <%= image_tag "/assets/default.jpg" %>
            <%end%>
        <%end%>
    </div>
</div>
<div>
    <%=image_tag @post.img.url%>
</div>
<div>
    <h3>コメント</h3>
    <%=@post.comment%>
</div>
<div>
    <%if current_user==@post.user%>
     <%= link_to '投稿を編集する', edit_post_path(@post) %>
     <%=link_to'投稿を削除する',@post,method: :delete%>
     <%end%>
</div>