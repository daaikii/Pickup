<%@posts.each do|post|%>
<h3><%= post.user.name %></h3>
<%= link_to user_path(post.user) do %>
    <%if post.user.image?%>
        <%= image_tag post.user.image.url%>
    <%else%>
        <%= image_tag "/assets/default.jpg" %>
    <%end%>
<%end%>
<div>
    <%= link_to post_path(post.id) do %>
        <%=image_tag post.img.url%>
    <%end%>
<%end%>